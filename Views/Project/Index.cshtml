@model IEnumerable<bds.Models.Project>
@{
    ViewData["Title"] = "Dự án";
    var featuredProjects = ViewBag.FeaturedProjects as IEnumerable<bds.Models.Project>;
    var favoritedIds = ViewBag.FavoriteProjectIds as List<int> ?? new List<int>();

}
<form id="antiForgeryForm">
    @Html.AntiForgeryToken()
</form>
<div class="container mt-4">

    <div class="row">

        <div class="col-lg-8 col-md-7">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold mb-3 text-center text-primary">Tất cả dự án mới nhất</h3>
                <a asp-action="Create" class="btn btn-primary custom-btn">
                    <i class="bi bi-plus-circle"></i> Đăng dự án của bạn
                </a>
            </div>

            <div id="projectList" class="row">
                @if (Model != null && Model.Any())

                {
                    foreach (var item in Model)
                    {
                        var favorited = favoritedIds.Contains(item.ProjectID);
                        var heartClass = favorited ? "bi-heart-fill text-danger" : "bi-heart";

                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm border-0 project-card position-relative">
                                <a asp-action="Details" asp-route-id="@item.ProjectID">
                                    <img src="@(item.Images.Any() ? Url.Content(item.Images.First().ImageUrl) : "/images/placeholder.jpg")"
                                         class="card-img-top rounded-top"
                                         style="height: 200px; object-fit: cover;" alt="@item.ProjectName" />
                                </a>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-truncate">
                                        <a asp-action="Details" asp-route-id="@item.ProjectID" class="text-decoration-none text-dark stretched-link">
                                            @item.ProjectName
                                        </a>
                                    </h5>

                                    <p class="card-text text-muted small mb-2">
                                        📍 @item.CommuneWard?.CommuneName,@item.CommuneWard?.District?.DistrictName,@item.CommuneWard?.District?.Province?.ProvinceName
                                    </p>

                                    @{
                                        var rawDescription = item.Description ?? "";
                                        rawDescription = rawDescription
                                        .Replace("</p>", ". ")
                                        .Replace("<br>", " ")
                                        .Replace("<br/>", " ")
                                        .Replace("<br />", " ")
                                        .Replace("</li>", ", ")
                                        .Replace("</ul>", " ")
                                        .Replace("</ol>", " ");
                                        string plainDescription = System.Text.RegularExpressions.Regex.Replace(rawDescription, "<.*?>", string.Empty);
                                        plainDescription = System.Text.RegularExpressions.Regex.Replace(plainDescription, @"\s+", " ").Trim();
                                        if (plainDescription.Length > 150)
                                        {
                                            plainDescription = plainDescription.Substring(0, 150) + "...";
                                        }
                                    }

                                    <p class="text-secondary small" style="line-height:1.5; text-align:justify;">
                                        @plainDescription
                                    </p>

                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            🕓 @item.StartDate?.ToString("dd/MM/yyyy") - @item.EndDate?.ToString("dd/MM/yyyy") &nbsp; | &nbsp; 👁️ @item.ClickCount
                                            <a asp-action="Details" asp-route-id="@item.ProjectID" class="text-primary float-end text-decoration-none fw-bold">
                                                Xem chi tiết →
                                            </a>
                                        </small>

                                        <!-- Khu vực người đăng + tym -->
                                        <div class="d-flex align-items-center justify-content-between border-top pt-2 mt-3">
                                            <div class="d-flex align-items-center">
                                                <img src="/images/avt/user.png" alt="Avatar" class="rounded-circle me-2" width="32" height="32" />
                                                <div class="small fw-semibold">
                                                    <span class="text-dark">@item.User?.FullName</span>
                                                </div>
                                            </div>

                                            <button class="btn btn-sm btn-outline-danger favorite-btn"
                                                    data-projectid="@item.ProjectID"
                                                    style="z-index:1050;">
                                                <i class="bi @heartClass"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">Hiện chưa có dự án nào được đăng.</p>
                }
            </div>
        </div>

        
        <div class="col-lg-4 col-md-5">
            <div class="position-sticky" style="top: 20px;">
                <!-- 🔍 TÌM KIẾM DỰ ÁN -->
                <div class="p-3 bg-light rounded shadow-sm mb-4">
                    <h5 class="fw-bold mb-3 text-center text-primary">🔍 Tìm kiếm dự án</h5>
                    <form id="searchForm">
                        <div class="mb-3">
                            <label for="provinceSelect" class="form-label fw-semibold">Tỉnh / Thành phố</label>
                            <select id="provinceSelect" class="form-select">
                                <option value="">-- Chọn tỉnh/thành phố --</option>
                                @foreach (var province in ViewBag.Provinces)
                                {
                                    <option value="@province.ProvinceID">@province.ProvinceName</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="districtSelect" class="form-label fw-semibold">Quận / Huyện</label>
                            <select id="districtSelect" class="form-select">
                                <option value="">-- Chọn quận/huyện --</option>
                            </select>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Tìm kiếm
                            </button>
                            <button type="button" id="resetBtn" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Hủy
                            </button>
                        </div>
                    </form>
                </div>

        <div class="p-3 bg-light rounded shadow-sm mb-4">
            <h5 class="fw-bold mb-3 text-center text-primary">🌟 Dự án nổi bật</h5>

            @if (featuredProjects != null && featuredProjects.Any())
            {
                <div class="list-group">
                    @foreach (var item in featuredProjects)
                    {
                        <a asp-action="Details" asp-route-id="@item.ProjectID"
                           class="list-group-item list-group-item-action border-0 border-bottom px-2 py-3 d-flex align-items-start">
                            <!-- ẢNH LỚN HƠN -->
                            <img src="@(item.Images.Any() ? Url.Content(item.Images.First().ImageUrl) : "/images/placeholder.jpg")"
                                 alt="@item.ProjectName"
                                 class="me-3 rounded-3 shadow-sm"
                                 style="width: 90px; height: 70px; object-fit: cover;">

                            <!-- NỘI DUNG -->
                            <div class="flex-fill">
                                <div class="fw-bold text-dark text-truncate" style="font-size: 1rem;">
                                    @item.ProjectName
                                </div>
                                <div class="text-muted small text-truncate mb-1">
                                    📍 @item.CommuneWard?.District?.DistrictName, @item.CommuneWard?.District?.Province?.ProvinceName
                                </div>
                                <div class="text-secondary small">
                                    🕓 @item.CreateAt.ToString("dd/MM/yyyy") &nbsp; | &nbsp; 👁️ @item.ClickCount
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <p class="text-muted text-center">Chưa có dự án nổi bật nào.</p>
            }
        </div>
        </>

    </div>
</div>

<style>
    /* Hiệu ứng cho thẻ Card bên trái
          1. Đổ bóng và nâng lên (giống code của bạn)
          2. Đổi màu Tiêu đề (class .card-title a) thành màu xanh
        */
    .project-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

            .project-card:hover .card-title a {
                color: #0d6efd !important; /* Màu xanh Primary của Bootstrap */
                text-decoration: underline;
            }

    /*
          Hiệu ứng cho list bên phải (Dự án nổi bật)
          Bootstrap đã có sẵn class .list-group-item-action
          nhưng chúng ta làm nó mượt hơn
        */
        .list-group-item-action {
        transition: background-color 0.25s ease-in-out, transform 0.2s ease;
        border-radius: 10px;
    }

        .list-group-item-action:hover {
            background-color: #e7f3ff;
            transform: translateY(-2px);
        }

        .list-group-item-action img {
            border: 2px solid #dee2e6;
        }

        .list-group-item-action .fw-bold {
            font-size: 1.05rem;
        }

        /* Giới hạn text trong phần Dự án nổi bật (sidebar) */
        .list-group-item-action .flex-fill {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        /* Nếu muốn cho phép xuống tối đa 2 dòng thay vì 1, dùng block clamp: */
        .list-group-item-action .fw-bold {
            display: -webkit-box;
            -webkit-line-clamp: 2; /* số dòng tối đa */
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Giới hạn dòng cho địa chỉ (tránh dài quá) */
        .list-group-item-action .text-muted {
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .favorite-btn i {
        transition: transform 0.2s ease, color 0.2s ease;
    }

    .favorite-btn:active i {
        transform: scale(1.3);
    }

    
</style>

        <!-- Toast thông báo -->
        <div id="toast" style="
    display:none;
    position: fixed;
    bottom: 25px;
    left: 50%;
    transform: translateX(-50%);
    background: #5cb85c; /* mặc định màu xanh */
    color: #fff;
    padding: 12px 22px;
    border-radius: 10px;
    font-weight: 500;
    font-size: 15px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.2);
    z-index: 9999;
    text-align: center;
    opacity: 0;
    transition: all 0.4s ease;
"></div>
@section Scripts {
            <script>
                // Hiển thị toast nhỏ góc phải
                                    function showToast(message, type = "success") {
                const toast = $("#toast");

                // Màu nền nhẹ tự nhiên
                const bgColor = type === "error"
                    ? "linear-gradient(90deg, #ff6b6b, #ff8787)" // đỏ nhạt
                    : "linear-gradient(90deg, #42ba96, #57e6b2)"; // xanh dịu

                toast
                    .css({
                        background: bgColor,
                        opacity: 0,
                        transform: "translate(-50%, 20px)"
                    })
                    .text(message)
                    .show()
                    .animate({ opacity: 1, bottom: "35px" }, 250);

                // Tự ẩn
                setTimeout(() => {
                    toast.animate({ opacity: 0, bottom: "25px" }, 400, () => toast.hide());
                }, 2000);
                }

                $(function () {
                    const token = $('#antiForgeryForm input[name="__RequestVerificationToken"]').val();

                    $(".favorite-btn").on("click", function (event) {
                        event.preventDefault();
                        event.stopPropagation();

                        const btn = $(this);
                        const projectId = btn.data("projectid");
                        btn.prop("disabled", true);

                        $.ajax({
                            type: "POST",
                            url: "/Prefered/AddFavorite",
                            headers: { "RequestVerificationToken": token },
                            data: { projectId: projectId },
                            success: function (res) {
                                if (res.success) {
                                    if (res.isFavorited) {
                                        btn.find("i")
                                            .removeClass("bi-heart")
                                            .addClass("bi-heart-fill text-danger");
                                        showToast("💖 Đã thêm vào danh sách yêu thích!", "success");
                                    } else {
                                        btn.find("i")
                                            .removeClass("bi-heart-fill text-danger")
                                            .addClass("bi-heart");
                                        showToast("💔 Đã xóa khỏi danh sách yêu thích!", "error");
                                    }
                                } else {
                                    showToast(res.message || "Không thể thay đổi yêu thích.", "error");
                                }
                            },
                            error: function () {
                                showToast("⚠️ Lỗi kết nối, vui lòng thử lại.", "error");
                            },
                            complete: function () {
                                btn.prop("disabled", false);
                            }
                        });
                    });
                });
            </script>
            <script>
                $(document).ready(function () {
                    // Load quận/huyện khi chọn tỉnh
                    $('#provinceSelect').on('change', function () {
                        var provinceId = $(this).val();
                        var $district = $('#districtSelect');
                        $district.html('<option value="">-- Chọn quận/huyện --</option>');

                        if (provinceId) {
                            $.getJSON('/Project/GetDistrictsByProvinceId', { provinceId: provinceId }, function (data) {
                                $.each(data, function (i, district) {
                                    $district.append('<option value="' + district.id + '">' + district.name + '</option>');
                                });
                            });
                        }
                    });

                    // 🔍 Xử lý tìm kiếm
                    $('#searchForm').on('submit', function (e) {
                        e.preventDefault();
                        var provinceId = $('#provinceSelect').val();
                        var districtId = $('#districtSelect').val();

                        $.getJSON('/Project/FilterProjects', { provinceId: provinceId, districtId: districtId }, function (data) {
                            var html = '';

                            if (data.length === 0) {
                                html = '<p class="text-muted">Không tìm thấy dự án phù hợp.</p>';
                            } else {
                                $.each(data, function (i, item) {
                                    html += `
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 shadow-sm border-0 project-card position-relative">
                                            <a href="/Project/Details/${item.projectID}">
                                                <img src="${item.imageUrl || '/images/placeholder.jpg'}"
                                                     class="card-img-top rounded-top"
                                                     style="height: 200px; object-fit: cover;" alt="${item.projectName}" />
                                            </a>
                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title fw-bold text-truncate">
                                                    <a href="/Project/Details/${item.projectID}" class="text-decoration-none text-dark stretched-link">
                                                        ${item.projectName}
                                                    </a>
                                                </h5>
                                                <p class="card-text text-muted small mb-2">
                                                    📍 ${item.communeName}, ${item.districtName}, ${item.provinceName}
                                                </p>
                                                <p class="text-secondary small" style="line-height:1.5; text-align:justify;">
                                                    ${item.description?.substring(0, 150) ?? ''}...
                                                </p>
                                                <div class="mt-auto">
                                                    <small class="text-muted">
                                                        🕓 ${item.startDate} - ${item.endDate} &nbsp; | &nbsp; 👁️ ${item.clickCount}
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>`;
                                });
                            }

                                          $('#projectList').html(html);
                // cập nhật danh sách dự án ngay trong Index
                        });
                    });

                    // 🔁 Nút Hủy - tải lại toàn bộ trang Index
                    $('#resetBtn').on('click', function () {
                        window.location.href = '/Project/Index';
                    });
                });
            </script>

}


