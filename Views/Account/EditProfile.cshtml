@model bds.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = ViewData["Layout"]?.ToString();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-5">

              
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
                        <h3 class="mt-2 text-primary fw-bold">Chỉnh sửa thông tin</h3>
                        <p class="text-muted mb-0">Cập nhật thông tin cá nhân của bạn bên dưới</p>
                    </div>

              
                    <form asp-action="EditProfile" method="post" novalidate>
                        <input type="hidden" asp-for="UserID" />

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-person"></i> Tên đăng nhập
                            </label>
                            <input asp-for="Username" class="form-control" readonly style="background-color: #f8f9fa;" />
                        </div>

     
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">
                                <i class="bi bi-person-vcard"></i> Họ và tên
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên của bạn" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                  
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="example@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">
                                <i class="bi bi-telephone"></i> Số điện thoại
                            </label>
                            <input asp-for="Phone" type="tel" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-warning px-4 me-2">
                                <i class="bi bi-check-circle"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle"></i> Quay lại
                            </a>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
