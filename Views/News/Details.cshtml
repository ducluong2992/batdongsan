@model bds.Models.News

@{
    Layout = ViewData["Layout"]?.ToString() ?? "_Layout";
    bool isAdminLayout = Layout?.Contains("Admin") == true;
}

<style>
    .news-detail-container {
        max-width: 900px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 30px;
    }

    .news-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .news-meta {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 20px;
    }

        .news-meta i {
            color: #007bff;
            margin-right: 6px;
        }

    .news-image {
        width: 100%;
        max-height: 450px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 20px;
        transition: transform 0.3s ease;
    }

        .news-image:hover {
            transform: scale(1.02);
        }

    .news-content {
        font-size: 1.05rem;
        line-height: 1.7;
        color: #333;
        text-align: justify;
        margin-bottom: 25px;
        white-space: pre-line;
    }

    .btn-back {
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-back:hover {
            background-color: #495057;
            color: #fff;
        }

    .news-gallery img {
        border-radius: 10px;
        margin-right: 10px;
        margin-bottom: 10px;
        width: calc(50% - 10px);
        height: 250px;
        object-fit: cover;
    }

    .admin-action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }
</style>

<div class="news-detail-container mt-4">
    <h1 class="news-title">@Model.Title</h1>

    <div class="news-meta">
        <span><i class="bi bi-person"></i> @(Model.User?.FullName ?? "Không rõ")</span> &nbsp;|&nbsp;
        <span><i class="bi bi-calendar"></i> @Model.CreateAt.ToString("dd/MM/yyyy HH:mm")</span>
    </div>

    <div class="news-content">
        @Html.Raw(Model.Content)
    </div>

    @if (isAdminLayout)
    {
        <div class="admin-action-buttons">
            <a href="@Url.Action("Edit", "News", new { id = Model.NewsID })" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Sửa
            </a>
            <form asp-action="Delete" asp-controller="News" asp-route-id="@Model.NewsID" method="post"
                  onsubmit="return confirm('Bạn có chắc muốn xóa tin tức này không?');">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </form>
        </div>
    }

    <a href="@Url.Action("Index", "News")" class="btn btn-secondary btn-back mt-3">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
