@model IEnumerable<bds.Models.News>



@{
    ViewData["Title"] = "Tin tức";

    Layout = ViewData["Layout"]?.ToString() ?? "_Layout";

    var role = ViewData["Role"]?.ToString() ?? "User";



    // 10 tin có lượt xem cao nhất, ưu tiên ngày mới

    var topViewed = Model

        .OrderByDescending(n => n.ViewCount)

        .ThenByDescending(n => n.CreateAt)

        .Take(10)

        .ToList();

}
<div class="container mt-4 mb-5">
    <h2 class="text-center fw-semibold mb-2" style="font-size:40px;">Tin tức bất động sản mới nhất</h2>
    <p class="text-secondary text-center mb-4" style="font-size:1rem; line-height:1.6;">
        Thông tin mới, đầy đủ, hấp dẫn về thị trường bất động sản Việt Nam thông qua dữ liệu lớn về giá,<br>
        giao dịch, nguồn cung - cầu và khảo sát thực tế của đội ngũ phóng viên, biên tập của HHL.com.vn.
    </p>

    <div class="d-flex flex-column flex-lg-row gap-4">
        <!-- Cột trái -->
        <div class="flex-lg-grow-1 d-flex flex-column gap-4">
            @foreach (var item in Model.OrderByDescending(n => n.CreateAt))
            {
                <div class="card border-0 shadow-sm news-card position-relative">
                    <a href="@Url.Action("Details", "News", new { id = item.NewsID })" class="text-decoration-none text-dark">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-5">
                                <div class="ratio ratio-16x9 rounded-start overflow-hidden">
                                    @if (item.Images != null && item.Images.Any())
                                    {
                                        <img src="@item.Images.First().ImageUrl" alt="Ảnh tin tức" class="img-fluid w-100" style="object-fit: cover; height:auto;">
                                    }
                                    else
                                    {
                                        <img src="~/images/no-image.png" alt="Không có ảnh" class="img-fluid w-100" style="object-fit: cover; height:auto;">
                                    }
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title text-primary fw-semibold mb-2">@item.Title</h5>
                                    <p class="card-text text-muted mb-3">
                                        @Html.Raw(item.Content?.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-secondary">
                                            <i class="bi bi-person"></i> @(item.User?.FullName ?? "Không rõ")
                                        </small>
                                        <small class="text-secondary">
                                            <i class="bi bi-calendar"></i> @item.CreateAt.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    <div class="position-absolute top-0 start-0 m-2 px-2 py-1 bg-light rounded shadow-sm d-flex align-items-center">
                        <i class="bi bi-eye me-1 text-secondary"></i>
                        <span class="text-secondary small">@item.ViewCount</span>
                    </div>
                </div>
            }
        </div>
        <div class="flex-lg-shrink-0" style="width:350px; min-width:300px;">
            <div class="p-3 bg-light rounded shadow-sm h-100 sticky-top" style="top:80px;">
                <h4 class="fw-semibold mb-4 text-center text-dark">
                    <i class="bi bi-fire text-danger"></i> Tin tức được quan tâm
                </h4>
                <ul class="list-unstyled">
                    @foreach (var item in topViewed)
                    {
                        <li class="mb-3 border-bottom pb-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @item.CreateAt.ToString("dd/MM/yyyy")
                                </small>
                                <small class="text-secondary">
                                    <i class="bi bi-eye"></i> @item.ViewCount
                                </small>
                            </div>
                            <a href="@Url.Action("Details", "News", new { id = item.NewsID })"
                               class="text-decoration-none text-dark fw-medium d-block mt-1">
                                @(item.Title.Length > 65 ? item.Title.Substring(0, 65) + "..." : item.Title)
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<style>

    .news-card {
        transition: all 0.3s ease;
        border-radius: 1rem;
        overflow: hidden;
        background-color: #fff;
    }

        .news-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    .card-title {
        font-size: 1.1rem;
        min-height: 2.5em;
    }

    .card-text {
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .news-card img {
        border-top-left-radius: 1rem;
        border-bottom-left-radius: 1rem;
        height: auto;
    }

    .bi-eye {
        font-size: 0.9rem;
    }

</style>