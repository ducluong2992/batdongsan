@{
    Layout = null;
    var adminName = User?.Identity?.Name ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Biểu tượng -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- CSS riêng cho admin -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <!-- Logo và tên trang -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Admin" asp-action="Index">
                    <img src="~/images/Logo/HHL2.png" alt="HHL RealEstate" class="logo-img" style="height:50px;">
                </a>

                <!-- Toggle menu trên mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU CHÍNH DÀNH CHO ADMIN -->
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Trang chủ
                            </a>
                        </li>

                        <!-- Quản lý bài đăng -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-card-checklist"></i> Quản lý bài đăng
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AdminPost" asp-action="Index">Bài đăng đã duyệt</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminPost" asp-action="Pending">Bài đăng chờ duyệt</a></li>
                            </ul>
                        </li>

                        <!-- Quản lý loại hình -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CategoryMng" asp-action="Index">
                                <i class="bi bi-building"></i> Quản lý loại hình
                            </a>
                        </li>

                        <!-- Quản lý người dùng -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="UserMng" asp-action="Index">
                                <i class="bi bi-people"></i> Quản lý người dùng
                            </a>
                        </li>

                        <!-- Thống kê -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminThongKe" asp-action="Index">
                                <i class="bi bi-graph-up"></i> Thống kê - Báo cáo
                            </a>
                        </li>
                    </ul>

                    <!-- MENU PHẢI -->
                    <ul class="navbar-nav align-items-center">

                        <!-- Nút Đăng tin tức -->
                        <li class="nav-item me-3">
                            <a class="btn btn-warning text-dark fw-semibold" asp-controller="AdminNews" asp-action="Create">
                                <i class="bi bi-megaphone"></i> Đăng tin tức
                            </a>
                        </li>

                        <!-- Xin chào Admin -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> Xin chào, @adminName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminSettings" asp-action="Index">Cài đặt hệ thống</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- NỘI DUNG CHÍNH -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3 mt-4">
        <p>&copy; @DateTime.Now.Year - HHL RealEstate Admin Panel</p>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
