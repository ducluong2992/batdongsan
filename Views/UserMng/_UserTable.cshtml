@model List<bds.Models.User>

@if (Model != null && Model.Any())
{
    <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
            <tr>
                <th>Username</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th> 
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.CreateAt.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (user.IsLocked)
                        {
                            <span class="badge bg-danger">Bị khóa</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                    </td>
                    <td class="text-center">
                        <form asp-controller="UserMng" asp-action="ToggleLockUser" method="post" class="d-inline"
                              onsubmit="return confirm('Xác nhận thao tác này?')">
                            <input type="hidden" name="id" value="@user.UserID" />
                            <button type="submit" class="btn btn-sm @(user.IsLocked ? "btn-success" : "btn-warning")">
                                <i class="bi @(user.IsLocked ? "bi-unlock" : "bi-lock")"></i>
                                @(user.IsLocked ? "Mở khóa" : "Khóa")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted m-3">Không có người dùng nào.</p>
}
