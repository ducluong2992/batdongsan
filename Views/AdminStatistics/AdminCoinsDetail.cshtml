@model List<TransactionHistory>

<h2 class="mt-3">Lịch sử giao dịch xu</h2>

<!-- Bộ lọc tháng -->

<form method="get" class="d-flex gap-3 mb-3">
    <select name="year" class="form-select" style="width:150px">
        @for (int y = DateTime.Now.Year - 5; y <= DateTime.Now.Year; y++)
        {
            <option value="@y" selected="@(ViewBag.CurrentYear == y ? "selected" : null)">
                @y
            </option>
        }
    </select>

    <select name="month" class="form-select" style="width:150px">
        <option value="">-- Tất cả tháng --</option>
        @for (int m = 1; m <= 12; m++)
        {
            <option value="@m" selected="@(ViewBag.CurrentMonth == m ? "selected" : null)">
                Tháng @m
            </option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Lọc</button>
</form>
@if (ViewBag.CurrentMonth != null)
{
    <div class="alert alert-info fw-semibold">
        Tổng Xu trong tháng @ViewBag.CurrentMonth / @ViewBag.CurrentYear:
        <span class="text-primary">@ViewBag.TotalCoinsOfMonth</span> Xu
    </div>
}


<!-- Bảng lịch sử -->
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Thời gian</th>
            <th>Nội dung</th>
            <th>Post ID</th>
            <th>Project ID</th>
            <th>Xu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Title</td>
                <td>@item.PostID</td>
                <td>@item.ProjectID</td>


                <!-- Hiển thị xu: dương = xanh, âm = đỏ, 0 = đen -->
                <td style="font-weight: bold; 
                           color:@(item.Coins > 0 ? "green" : item.Coins < 0 ? "red" : "red")">
                    @(item.Coins > 0 ? "+" + item.Coins : "+" + item.Coins)
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination">

            <!-- Trang trước -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?month=@ViewBag.CurrentMonth&page=@(ViewBag.CurrentPage - 1)">
                    « Trước
                </a>
            </li>

            <!-- Các trang -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       href="?month=@ViewBag.CurrentMonth&page=@i">@i</a>
                </li>
            }

            <!-- Trang sau -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?month=@ViewBag.CurrentMonth&page=@(ViewBag.CurrentPage + 1)">
                    Sau »
                </a>
            </li>

        </ul>
    </nav>
}
