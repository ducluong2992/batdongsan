@model IEnumerable<bds.Models.Notification>
@{
    ViewData["Title"] = "Thông báo";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <!-- Header -->
        <div class="card-header d-flex justify-content-between align-items-center text-white"
             style="background: linear-gradient(90deg, #004080, #0078b7); border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            <h5 class="mb-0 fw-bold text-shadow"><i class="bi bi-bell-fill me-2"></i>Thông báo của bạn</h5>
            <span class="small text-light opacity-100">@DateTime.Now.ToString("dd/MM/yyyy")</span>
        </div>


        <!-- Body -->
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-bell-slash display-6 d-block mb-3"></i>
                    <h6>Bạn chưa có thông báo nào</h6>
                    <p class="small text-secondary">Khi có bài đăng hoặc dự án được duyệt, bạn sẽ thấy thông báo tại đây.</p>
                </div>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.OrderByDescending(n => n.CreatedAt))
                    {
                        var isUnread = !item.IsRead;
                        <li class="list-group-item px-4 py-3 d-flex justify-content-between align-items-start @(isUnread ? "bg-light border-start border-3 border-primary" : "")">
                            <div class="ms-2 me-auto">
                                <div class="fw-semibold text-dark">
                                    @item.Title
                                    @if (isUnread)
                                    {
                                        <span class="badge bg-primary ms-2">Mới</span>
                                    }
                                </div>
                                <p class="mb-1 text-secondary small">@item.Message</p>
                                <div class="text-muted small"><i class="bi bi-clock me-1"></i>@item.CreatedAt.ToString("HH:mm - dd/MM/yyyy")</div>

                                @if (item.PostID != null)
                                {
                                    <a asp-controller="Post" asp-action="Details" asp-route-id="@item.PostID"
                                       class="btn btn-sm btn-outline-primary mt-2">
                                        <i class="bi bi-house-door me-1"></i> Xem bài đăng
                                    </a>
                                }
                                else if (item.ProjectID != null)
                                {
                                    <a asp-controller="Project" asp-action="Details" asp-route-id="@item.ProjectID"
                                       class="btn btn-sm btn-outline-success mt-2">
                                        <i class="bi bi-building me-1"></i> Xem dự án
                                    </a>
                                }
                            </div>
                            @if (isUnread)
                            {
                                <div class="ms-2 mt-1">
                                    <span class="notif-dot d-inline-block" style="width:10px; height:10px; background-color:#0d6efd; border-radius:50%;"></span>
                                </div>
                            }
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

<style>
    .text-shadow {
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
    }

    .card {
        border-radius: 1rem;
    }

    .list-group-item {
        transition: all 0.2s ease;
        border: none;
        border-bottom: 1px solid #f1f1f1;
    }

    .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateX(3px);
    }

    .list-group-item:last-child {
        border-bottom: none;
    }

    /* ===== NÚT XEM BÀI ĐĂNG & XEM DỰ ÁN ===== */
    .btn-outline-primary,
    .btn-outline-success {
        display: inline-flex !important; /* ✅ chỉ chiếm vừa nội dung */
        align-items: center;
        justify-content: center;
        width: auto !important; /* ✅ không chiếm full chiều ngang */
        min-width: unset !important; /* ✅ bỏ giới hạn width trước đó nếu có */
        padding: 6px 14px;
        border-radius: 8px;
        font-weight: 500;
        border-width: 2px;
        transition: all 0.25s ease;
    }

    /* 🟦 Xem bài đăng: xanh dương đậm rõ nét */
    .btn-outline-primary {
        color: #005c99;
        border-color: #005c99; /* ✅ Viền xanh dương */
    }

        .btn-outline-primary:hover {
            background-color: #005c99;
            color: #fff;
            border-color: #005c99;
            transform: translateY(-1px);
        }

    /* 🟩 Xem dự án: xanh lá chuẩn Bootstrap */
    .btn-outline-success {
        color: #1e7e34;
        border-color: #1e7e34;
    }

        .btn-outline-success:hover {
            background-color: #1e7e34;
            color: #fff;
            border-color: #1e7e34;
            transform: translateY(-1px);
        }



    .card-header {
        font-size: 1.1rem;
        letter-spacing: 0.3px;
    }
</style>
